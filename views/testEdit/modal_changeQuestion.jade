extends ../layout
block content
    script(src='/javascripts/testEdit.js')
    div
        a(href="/test/groups/#{group.id}/questions/")
            button(type="button" class="btn btn-link") Список вопросов
    nav(class="navbar navbar-default" role="navigation")
        div(class="container-fluid")
        a(class="navbar-brand") Текст вопроса
        form(class="navbar-form navbar-left",id="editques",method="post",action="/test/groups/#{group.id}/questions/#{question.id}/edit")
            div.form-group
                textarea(rows="3",type="text",name='inputname', class="form-control",style='width:500%') #{question.text}
    div.form-group
        input(id="setType",type="hidden",name="AnswerType",value="")
    div.form-group
            div.tabbable.tabs
                ul.nav.nav-tabs
                    li
                        a(href="#TestAnswerOpen",data-toggle="tab",onclick="TestCreator.ChoiceType('Open')") Открытый вопрос
                    li
                        a(href="#TestAnswerOneChoice",data-toggle="tab",onclick="TestCreator.ChoiceType('OneChoice')") Одновыборный вопрос
                    li
                        a(href="#TestAnswerManyChoice",data-toggle="tab",onclick="TestCreator.ChoiceType('ManyChoice')") Многовыборный вопрос
    div.tab-content
        div.tab-pane#TestAnswerOpen
            div.form-group
                    select(class="form-control", name="inputtypeanswer")
                        option Автоматическая проверка
                        option Ручная проверка
                    p
                    textarea(rows="3", type="text", class="form-control", name="inputTestAnswerOpen[]", placeholder="Ответ...")

        div.tab-pane#TestAnswerOneChoice(class="active")
            div(class="input-group")
                span(class="input-group-addon")
                 input(type="radio", name="inputTestAnswerOneChoiceCorrect",value="0")
                input(type="text", class="form-control",name="inputTestAnswerOneChoice[]")
            br
            div.input-group
                span.input-group-addon
                    input(type="radio", name="inputTestAnswerOneChoiceCorrect",value="1")
                input(type="text", class="form-control",name="inputTestAnswerOneChoice[]")

        div.tab-pane#TestAnswerManyChoice
            div.input-group
                span.input-group-addon
                    input(type="checkbox", name="inputTestAnswerManyChoiceCorrect[]",value="0")
                input(type="text", class="form-control",name="inputTestAnswerManyChoice[]")
            br
            div.input-group
                span.input-group-addon
                    input(type="checkbox", name="inputTestAnswerManyChoiceCorrect[]",value="1")
                input(type="text", class="form-control",name="inputTestAnswerManyChoice[]")
            br
            div.input-group
                span.input-group-addon
                    input(type="checkbox", name="inputTestAnswerManyChoiceCorrect[]",value="2")
                input(type="text", class="form-control",name="inputTestAnswerManyChoice[]")
        p
        div.form-group
                button(title="save",type="submit", class="btn btn-default", form="editques") Изменить &nbsp
                    span(class="glyphicon glyphicon-ok")
