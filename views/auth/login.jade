extends ../layout
block styles
  link(rel='stylesheet', href='/stylesheets/login.css')

block content
  form.form-signin(role='form', method='post')
    h2.form-signin-heading Укажите данные авторизации
    input.form-control(name='username', type='email', placeholder='Email', required='', autofocus='')
    input.form-control(name='password', type='password', placeholder='Password', required='')
    button.btn.btn-lg.btn-primary.btn-block(type='submit') Войти

    if message
      p.bg-danger= message

